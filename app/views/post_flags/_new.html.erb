<div class="flag-dialog-body">
  <%= embed_wiki("help:flag_notice", classes: "mb-4") %>

  <% if CurrentUser.user.flag_limit < Float::INFINITY && CurrentUser.user.post_flags.active.count > 0 %>
    <p><b>Remaining flags</b>: <%= (CurrentUser.user.flag_limit - CurrentUser.user.post_flags.active.count).clamp(0..) %></p>
  <% end %>

  <%= edit_form_for(post_flag, format: :js, remote: true) do |f| %>
    <%= f.hidden_field :post_id %>
    <%= f.input :reason, as: :dtext, inline: true, input_html: { autofocus: true }, placeholder: "Briefly explain why the post should be deleted" %>
  <% end %>
</div>
